<%- layout("/layouts/boilerplate") -%>
<script>
    const mapToken = "<%=process.env.MAP_TOKEN%>";
    const listing = <%-JSON.stringify(data)%>;
</script>
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/rating.css">
<div class="row mt-3 mb-3">
    <div class="col-8 offset-3">
        <h3>Listing details</h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= data.image.url %>" class="card-img-top mt-2 show-img" alt="Listing_image">
        <div class="card-body">
            <p class="card-text">
                <br>
                <b><%= data.title %></b><br>
                Owned By : <i><%= data.owner.username %></i><br>
                <%= data.description %><br>
                &#8377; <%= data.price.toLocaleString("en-IN") %> / night<br>
                <%= data.location %><br>
                <%= data.country %>
            </p>
        </div>
    </div>
    <% if(currUser && currUser._id.equals(data.owner._id)) { %>
        <div class="btns">
            <a href="/listings/<%= data._id %>/edit" class="btn btn-dark col-1.1 mb-3 offset-3 add-btn">Edit</a>
            <form method="post" action="/listings/<%= data._id %>?_method=delete">
                <button class="btn btn-dark mb-3 offset-5">Delete</button>
            </form>
        </div>
    <% } %>
    <div class="col-6 offset-3">
        <% if(currUser) { %>
            <hr class="mb-4">
            <h4>Leave a Review</h4>
            <form action="/listings/<%= data._id %>/reviews" class="needs-validation" method="post" novalidate>                    
                <div class="mt-3">
                    <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No ." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                  </div>
                <div>
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" placeholder="write comments..." cols="3" rows="3" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add valid comment</div>
                </div>
                <br>
                <button class="btn btn-dark col-1.5 add-btn">Submit</button>
            </form>
        <% } %>
        <hr>
        <% if(data.reviews.length >0) { %>
            <p><b>All Reviews</b></p>
        <% } %>
        <div class="row">
            <% for(let review of data.reviews) { %>
                <div class="card col-5 ms-3 mb-3" id="reviewbody">
                    <div class="card-body">
                        <h5 class="card-title mt-2">@<%= review.author.username %></h5>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="starability-result card-text mb-3" data-rating="<%= review.rating %>"></p>
                        <% if(currUser && currUser._id.equals(review.author._id)) { %>
                        <form class="mb-3" method="post" action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=delete">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                        <%}%>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <div class="col-8 offset-3 mb-3">
        <h3>Where you'll be</h3>
        <div id="map"></div>  
    </div>
</div>
<script src="/javascript/map.js"></script>