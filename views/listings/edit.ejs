<%- layout("/layouts/boilerplate") -%>
<link rel="stylesheet" href="/css/style.css">
<div class="row mt-5" style="transform: scale(1.1);">
    <div class="col-8 offset-2">
        <h2>Edit this Listing</h2>
    <form method="post" action="/listings/<%= listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
       <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" class="form-control" type="text" value="<%= listing.title%>" required>
        <div class="invalid-feedback">
            Please enter valid title.
          </div>
    </div>
       <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea name="listing[description]" class="form-control" type="text"required><%= listing.description%></textarea>
        <div class="invalid-feedback">
            Please enter valid description.
          </div>
    </div>
        <div class="mb-3">
            <lable for="image" class="form-label">upload new Image</lable>
            <input name="listing[image]" class="form-control" type="file">
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <lable for="price" class="form-label">Price</lable>
                <input name="listing[price]" class="form-control" type="number" value="<%= listing.price%>" required>      
                <div class="invalid-feedback">
                    Please enter valid price.
                  </div>
            </div>
            <div class="mb-3 col-8">
                <lable for="country" class="form-label">Country</lable>
                <input name="listing[country]" type="text" class="form-control"  value="<%= listing.country%>" required>
                <div class="invalid-feedback">
                    Please enter valid country.
                  </div>
            </div>
        </div>
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]" type="text" class="form-control" value="<%= listing.location%>"required>
            <div class="invalid-feedback">
                Please enter valid location.
              </div>
        </div>
        <button class="btn mt-3 btn-dark add-btn">Submit</button>
    </form>
    </div>
    </div>
